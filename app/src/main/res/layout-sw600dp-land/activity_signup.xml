<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/parentLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/intro_background"
              android:orientation="vertical">

    <include layout="@layout/partial_toolbar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ivorya3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/three_hundred_eightee"
                android:layout_marginStart="@dimen/three_hundred_eightee"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/enter_name"
                        android:maxLength="50"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/contact"
                        android:inputType="number"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputMobileNO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/mobileNo"
                        android:maxLength="15"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputOrgnization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textOrgnization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:maxLength="50"
                        android:hint="@string/organization_name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputCPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:maxLength="50"
                    app:hintTextAppearance="@style/EditTextBlackHint">

                    <EditText
                        android:id="@+id/textCPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mandatory"
                        android:drawablePadding="@dimen/padding_1dp"
                        android:hint="@string/hint_confirm_password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_ultra_small"/>

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/btn_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="@dimen/padding_extra_large"
                    android:background="@drawable/orange_border_background"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_ultra_small"
                    android:textStyle="bold"/>


            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>