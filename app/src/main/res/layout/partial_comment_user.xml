<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/reletiveparentLayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/full_fill_rounded_corner_blue_bg"
        android:freezesText="true"
        android:padding="5dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDateLabel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user_left"
            android:layout_width="@dimen/padding_extra_large"
            android:layout_height="@dimen/padding_extra_large"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_user"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linearContentBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/in_message_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_very_small"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_divider"/>

                <TextView
                    android:id="@+id/labelUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:text="User Name"
                    android:textSize="@dimen/title_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/labelComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:inputType="textMultiLine"
                    android:text="Comment text"
                    android:textSize="@dimen/title_very_small"/>

                <TextView
                    android:id="@+id/labelInsertDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_very_small"
                    android:text="Date Time"
                    android:textSize="@dimen/title_very_small"/>
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/img_user_right"
            android:layout_width="@dimen/padding_extra_large"
            android:layout_height="@dimen/padding_extra_large"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_user"/>

    </LinearLayout>


</RelativeLayout>