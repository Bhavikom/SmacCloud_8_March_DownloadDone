<android.support.design.widget.CoordinatorLayout android:id="@+id/parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:salescloud="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:padding="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent_color"
            android:scrollbarSize="16sp"
            salescloud:collapsedTitleGravity="end|left"
            salescloud:contentScrim="?attr/colorPrimary"
            salescloud:expandedTitleGravity="bottom|left"
            salescloud:layout_scrollFlags="scroll|exitUntilCollapsed"
            salescloud:titleEnabled="false">

            <ImageView
                android:id="@+id/imageMediaView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred"
                android:scaleType="fitXY"
                salescloud:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/navigationBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                salescloud:layout_collapseMode="pin"
                salescloud:popupTheme="@style/Theme.AppCompat.Light"
                salescloud:theme="@style/Theme.Eccelor.Base.Toolbar" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        salescloud:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            salescloud:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_very_small"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_medium" />

                <TextView
                    android:id="@+id/txtInsertTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_2dp"
                    android:textSize="@dimen/title_very_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/btn_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_very_small"
                    android:background="@drawable/orange_border_background"
                    android:gravity="center"
                    android:padding="@dimen/padding_very_small">

                    <TextView
                        android:id="@+id/txt_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_very_small" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/padding_very_small"
                android:background="@color/Gray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtLikesCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_fill_orange"
                        android:drawablePadding="@dimen/padding_very_small"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/title_medium" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCommentCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_orange_comment"
                        android:drawablePadding="@dimen/padding_very_small"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/title_medium" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_share_orange" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/padding_very_small"
                android:background="@color/Gray2" />

            <LinearLayout
                android:id="@+id/layoutFileDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtFileDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_info"
                    android:drawablePadding="@dimen/padding_medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/padding_very_small"
                    android:background="@color/Gray2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_very_small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/size"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/available_on_device"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaAvailableOnDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/owner"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/created"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:layout_marginTop="@dimen/padding_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:ems="8"
                        android:singleLine="true"
                        android:text="@string/modified"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_medium" />

                    <TextView
                        android:id="@+id/textMediaModifiedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/title_medium" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/padding_very_small"
                android:background="@color/Gray2" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_very_small"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/rounded_red_bg"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/title_very_small" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>